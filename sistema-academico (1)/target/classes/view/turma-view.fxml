<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TurmaController"
      spacing="10" padding="10">

    <children>

        <Label text="Cadastro de Turmas"
               style="-fx-font-size:18px;-fx-font-weight:bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Semestre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtSemestre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Disciplina:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboDisciplina" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Professor:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboProfessor" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="HorÃ¡rio:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtHorario" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox spacing="10">
            <Button text="Novo" onAction="#novo"/>
            <Button text="Editar" onAction="#editar"/>
            <Button text="Salvar" onAction="#salvar"/>
            <Button text="Remover" onAction="#remover"/>
            <Button text="Atualizar lista" onAction="#atualizarLista"/>
        </HBox>

        <TableView fx:id="tabelaTurmas" prefHeight="400">
            <columns>
                <TableColumn fx:id="colDisciplina" text="Disciplina" prefWidth="200"/>
                <TableColumn fx:id="colProfessor" text="Professor" prefWidth="200"/>
                <TableColumn fx:id="colSemestre" text="Semestre" prefWidth="120"/>
            </columns>
        </TableView>

    </children>
</VBox>
