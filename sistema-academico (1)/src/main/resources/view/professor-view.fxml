<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ProfessorController"
      spacing="12"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
    </padding>

    <children>

        <!-- TÍTULO -->
        <VBox spacing="4">
            <children>
                <Label text="Cadastro de Professores"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Separator/>
            </children>
        </VBox>

        <!-- CARD DADOS DO PROFESSOR -->
        <VBox spacing="10"
              style="-fx-background-color: #ffffff; -fx-border-color: #d0d0d0;
                     -fx-border-radius: 5; -fx-background-radius: 5;">
            <padding>
                <Insets top="12.0" right="12.0" bottom="12.0" left="12.0"/>
            </padding>
            <children>

                <Label text="Dados do Professor"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="110"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNome"
                                   promptText="Digite o nome completo"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="E-mail:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail"
                                   promptText="exemplo@universidade.edu"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Formação:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtFormacao"
                                   promptText="Titulação ou área de formação"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Disciplinas (exibição):"
                               GridPane.rowIndex="3" GridPane.columnIndex="0"
                               alignment="TOP_LEFT"/>
                        <ListView fx:id="listDisciplinas"
                                  GridPane.rowIndex="3" GridPane.columnIndex="1"
                                  prefHeight="100"
                                  style="-fx-background-color: #fafafa;"/>
                    </children>
                </GridPane>

                <!-- BOTÕES -->
                <HBox spacing="8" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Novo" onAction="#novo" style="-fx-pref-width: 80;"/>
                        <Button text="Editar" onAction="#editar" style="-fx-pref-width: 80;"/>
                        <Button text="Salvar" onAction="#salvar" style="-fx-pref-width: 80;"/>
                        <Button text="Remover" onAction="#remover" style="-fx-pref-width: 90;"/>
                        <Button text="Atualizar lista" onAction="#atualizarLista" style="-fx-pref-width: 120;"/>
                    </children>
                </HBox>

            </children>
        </VBox>

        <Region prefHeight="5"/>

        <!-- CARD TABELA -->
        <VBox spacing="6"
              VBox.vgrow="ALWAYS"
              style="-fx-background-color: #ffffff; -fx-border-color: #d0d0d0;
                     -fx-border-radius: 5; -fx-background-radius: 5;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>

                <Label text="Professores cadastrados"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <TableView fx:id="tabelaProfessores" prefHeight="400" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="220"/>
                        <TableColumn fx:id="colEmail" text="E-mail" prefWidth="260"/>
                        <TableColumn fx:id="colFormacao" text="Formação" prefWidth="240"/>
                    </columns>
                </TableView>

            </children>
        </VBox>

    </children>
</VBox>
