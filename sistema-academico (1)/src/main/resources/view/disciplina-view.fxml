<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.DisciplinaController"
      spacing="10" padding="10">

    <children>

        <Label text="Cadastro de Disciplinas"
               style="-fx-font-size:18px;-fx-font-weight:bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="txtDescricao" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Curso:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboCurso" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Professores:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ListView fx:id="listProfessores"
                          GridPane.rowIndex="3" GridPane.columnIndex="1"
                          prefHeight="120"/>
            </children>
        </GridPane>

        <HBox spacing="10">
            <Button text="Novo" onAction="#novo"/>
            <Button text="Editar" onAction="#editar"/>
            <Button text="Salvar" onAction="#salvar"/>
            <Button text="Remover" onAction="#remover"/>
            <Button text="Atualizar lista" onAction="#atualizarLista"/>
        </HBox>

        <TableView fx:id="tabelaDisciplinas" prefHeight="400">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                <TableColumn fx:id="colCurso" text="Curso" prefWidth="200"/>
            </columns>
        </TableView>

    </children>
</VBox>
